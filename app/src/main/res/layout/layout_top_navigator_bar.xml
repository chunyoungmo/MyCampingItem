<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_navigator_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50"
    android:background="@drawable/navigation_bar_background">

    <RelativeLayout
        android:id="@+id/top_navigator_bar_back_layout"
        android:layout_width="@dimen/dp_50"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/ic_navi_bar_back"
            android:layout_centerInParent="true"
            />
        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_1"
            android:background="#a4955e"/>
        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#dbcea1"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/top_navigator_bar_title"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/top_navigator_bar_back_layout"
        android:layout_marginLeft="@dimen/dp_15"
        android:textColor="#6f3131"
        android:textSize="19sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/top_navigator_bar_menu_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_35"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_navi_bar"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:textSize="15sp"
        android:textAllCaps="false"
        />
</RelativeLayout>
