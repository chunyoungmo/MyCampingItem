<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/multi_select_popup_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.youngmo.chun.mycampingitem.activity.SingleSelectPopupActivity"
    android:background="@color/DimBlack">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@drawable/border_popup"
        >
        <LinearLayout
            android:id="@+id/multi_select_popup_title_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="#cbbb82"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/multi_select_popup_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/White"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_4"
                />
        </LinearLayout>

        <ListView
            android:id="@+id/multi_select_popup_list_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_240">
        </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10" >

            <Button
                android:id="@+id/multi_select_popup_cancel_button"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_40"
                android:layout_weight="1"
                android:text="@string/cancel"
                android:background="@drawable/selector_popup_btn_background_type2"
                android:textColor="@drawable/selector_popup_btn_textcolor_type2"
                android:textSize="16sp"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/multi_select_popup_confirm_button"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_40"
                android:layout_weight="1"
                android:text="@string/confirm"
                android:background="@drawable/selector_popup_btn_background_type1"
                android:textColor="@drawable/selector_popup_btn_textcolor_type1"
                android:textSize="16sp"
                android:layout_marginLeft="@dimen/dp_10"
                android:textAllCaps="false" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
